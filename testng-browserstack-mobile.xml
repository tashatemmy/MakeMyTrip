<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="BrowserStack Mobile Suite" parallel="tests" thread-count="2">
  <test name="BS Android Chrome">
  	<parameter name="env" value="useBrowserStack"/>
    <parameter name="device" value="Samsung Galaxy S22"/>
    <parameter name="osVersion" value="12.0"/>
    <parameter name="realMobile" value="true"/>
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="makemytriptests.LoginTest"/>
    </classes>
  </test>

  <test name="BS iPhone Safari">
  	<parameter name="env" value="useBrowserStack"/>
    <parameter name="device" value="iPhone 13"/>
    <parameter name="osVersion" value="15"/>
    <parameter name="realMobile" value="true"/>
    <parameter name="browser" value="safari"/>
    <classes>
      <class name="makemytriptests.LoginTest"/>
    </classes>
  </test>
</suite>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Local Test Suite" parallel="tests" thread-count="2">
  <test name="Chrome MakeMyTripTest">
  	<parameter name="env" value="local"/>
  	<parameter name="browser" value="chrome"/>
    <classes>
      <class name="makemytriptests.LoginTest"/>
      <class name="makemytriptests.FlightSearchTests"/>
      <class name="makemytriptests.HotelSearchTest"/>
    </classes>
  </test> <!-- Test -->
  
  
  <test name="Firefox MakeMyTripTest">
  	<parameter name="env" value="local"/>
  	<parameter name="browser" value="firefox"/>
    <classes>
      <class name="makemytriptests.LoginTest"/>
      <class name="makemytriptests.FlightSearchTests"/>
      <class name="makemytriptests.HotelSearchTest"/>
    </classes>
  </test>
  
</suite> <!-- Suite -->